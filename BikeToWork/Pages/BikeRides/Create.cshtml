@page
@model BikeToWork.Pages.BikeRides.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>
<h4>BikeRide</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="BikeRide.ParticipantId" class="control-label">Who are you?</label>
                <select asp-for="BikeRide.ParticipantId" class="form-control" >
                    <option value="">---Select your name---</option>
                    @foreach (var person in Model.ListOfParticipants)
                    {
                        <option value="@person.Id">@(person.FirstName + " " + person.LastName)</option>
                    }
                </select>
                <span asp-validation-for="BikeRide.ParticipantId" class="text-danger"></span>
            </div>
            <hr />
            <div class="form-group">
                <label asp-for="BikeRide.Date" class="control-label"></label>
                <input asp-for="BikeRide.Date" class="form-control" />
                <span asp-validation-for="BikeRide.Date" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BikeRide.Distance" class="control-label"></label>
                <input asp-for="BikeRide.Distance" type="number" class="form-control" min="1" max="255" />
                <span asp-validation-for="BikeRide.Distance" class="text-danger" ></span>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
