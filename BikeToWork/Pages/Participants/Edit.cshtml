@page
@model BikeToWork.Pages.Participant.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>
<h4>Participant</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Participant.Id" />
            <div class="form-group">
                <label asp-for="Participant.FirstName" class="control-label"></label>
                <input asp-for="Participant.FirstName" class="form-control" />
                <span asp-validation-for="Participant.FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Participant.LastName" class="control-label"></label>
                <input asp-for="Participant.LastName" class="form-control" />
                <span asp-validation-for="Participant.LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Participant.Team" class="control-label"></label>
                <input asp-for="Participant.Team" class="form-control" />
                <span asp-validation-for="Participant.Team" class="text-danger"></span>
            </div>
            <div>
                <label asp-for="Participant.BikeClass" class="control-label"></label>
                <select asp-for="Participant.BikeClass" class="form-control">
                    <option value="">---Select Bike Class---</option>
                    @foreach (var bikeClass in Model.ListOfBikeClasses)
                    {
                            <option>@bikeClass</option>
                    }
                </select>
                <span asp-validation-for="Participant.BikeClass" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<br />
<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
